@model IEnumerable<DBOperation.ExpenseTracker>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var currentUser = (ClientManager.Models.UserDetails)Session["UserDetails"];
}
<style>
    table tr td:first-child {
        white-space: nowrap;
    }

    .dataTables_filter {
        display: none !important;
    }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Expense Tracker</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Accounts</a></li>
                        <li class="breadcrumb-item"><a href="#">Expense Tracker</a></li>
                        <li class="breadcrumb-item active">List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                @if (currentUser.UserRoles.Any(wh => wh.RoleName == "Store Admin"))
                                {
                                    <div class="col-4 col-sm-6">
                                        <h3 class="card-title">Expense Tracker</h3>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-4 col-sm-8">
                                        <h3 class="card-title">Expense Tracker</h3>
                                    </div>
                                }
                                @*<div class="col-4 col-sm-2">
                                        <button type="button"  <div class="col-4 col-sm-2">
                                        <button type="button" style="float:right" class="btn btn-block btn-primary btn-sm " onclick="javascript:fnToggleAdvSearch('1')"><i class="fa fa-search"></i> Search</button>
                                    </div>="float:right" class="btn btn-block btn-primary btn-sm " onclick="javascript:fnToggleAdvSearch('1')"><i class="fa fa-search"></i> Adv. Search</button>
                                    </div>*@
                                @if (!currentUser.UserRoles.Any(wh => wh.RoleName == "Super User"))
                                {
                                    <div class="col-4 col-sm-2">
                                    </div>
                                }
                                <div class="col-4 col-sm-2">
                                    <button type="button" style="float:right" class="btn btn-block btn-primary btn-sm " onclick="javascript:fnToggleAdvSearch('1')"><i class="fa fa-search"></i> Search</button>
                                </div>

                                @if (currentUser.UserRoles.Any(wh => wh.RoleName == "Store Admin"))
                                {
                                    <div class="col-4 col-sm-2">
                                        <button type="button" style="float:right" class="btn btn-block btn-primary btn-sm " onclick="javascript:location.href='/ExpenseTrackers/Create'"><i class="fa fa-plus"></i> New</button>
                                    </div>
                                }
                                @if (currentUser.UserRoles.Any(wh => wh.RoleName == "Super User"))
                                {
                                    <div class="col-4 col-sm-2">
                                        <button type="button" style="float:right" class="btn btn-block btn-success btn-sm " onclick="javascript:fnBulkApprove()"><i class="fa fa-tags"></i>Bulk Approve</button>
                                    </div>
                                }
                            </div>

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="pnlAdvSearch">
                                <div class="card-body" style="background-color:whitesmoke">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="expenseDateFrom">Expense Date From</label>
                                                <div class="input-group date" data-target-input="nearest">
                                                    <input type="text" class="form-control datetimepicker-input" data-target="#txtexpenseDateFrom" name="expenseDateFrom" id="txtexpenseDateFrom">
                                                    <div class="input-group-append" data-target="#txtexpenseDateFrom" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="expenseDateTo">Expense Date To</label>
                                                <div class="input-group date" data-target-input="nearest">
                                                    <input type="text" class="form-control datetimepicker-input" data-target="#txtexpenseDateTo" name="expenseDateTo" id="txtexpenseDateTo">
                                                    <div class="input-group-append" data-target="#txtexpenseDateTo" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="Status">Status</label>
                                                <input type="hidden" id="filterCon" value="@ViewBag.DashboardFilter" />
                                                @Html.DropDownList("Status", null, htmlAttributes: new { @class = "form-control select2", @id = "ddlStatus" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="Status">Expense Category</label>
                                                @Html.DropDownList("ExpenseCategory", null, htmlAttributes: new { @class = "form-control select2", @id = "ddlExpenseCategory" })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="Status">Month</label>
                                                @Html.DropDownList("Months", null, htmlAttributes: new { @class = "form-control select2", @id = "ddlMonths" })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="Status">Year</label>
                                                @Html.DropDownList("Years", null, htmlAttributes: new { @class = "form-control select2", @id = "ddlYears" })
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary btn-sm" onclick="javascript:fnSearch()"> <i class="fa fa-search"></i> Search</button>
                                        <button type="button" onclick="javascript:fnClearSearch()" class="btn btn-danger btn-sm">Clear</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="javascript:fnToggleAdvSearch('0')">Hide</button>
                                    </div>
                                </div>
                                <br />
                            </div>
                            @Html.Partial("ListView", Model)
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script>
    $('#pnlAdvSearch').hide();
  
    function fnDasboardFilter(status) {
        if (status != null) {
            debugger;
            var actionUrl = "/ExpenseTrackers/ListView?" + "expenseDateFrom=&expenseDateTo=&status=" + status + "&year=&month=&expenseCat=";
            $('#gridView').html('');
            $.ajax({
                url: actionUrl,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html',
                success: function (result) {
                    $('#gridView').html(result);
                    $('#pettyCashSummary').css("display", "none");
                },
                error: function (xhr, status) {
                    alert(status);
                }
            })
        }
    }
    function fnSearch() {
        debugger;
        var actionUrl = "/ExpenseTrackers/ListView?" + "expenseDateFrom=" + $('#txtexpenseDateFrom').val().replace(/\//g, '-') + "&expenseDateTo=" + $('#txtexpenseDateTo').val().replace(/\//g, '-') + "&status=" + $('#ddlStatus').val() + "&year=" + $('#ddlYears').val() + "&month=" + $('#ddlMonths').val() + "&expenseCat=" + $('#ddlExpenseCategory').val();
        $('#gridView').html('');
        $.ajax({
            url: actionUrl,
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('#gridView').html(result);
                $('#pettyCashSummary').css("display", "none");
            },
            error: function (xhr, status) {
                alert(status);
            }
        })
    }

    function FilterPettyCash(status) {
        $('#ddlStatus').val(status);
        fnSearch();
    }
    function fnViewDocuments(recId) {
        debugger;
        var left = ($(window).width() / 2) - (900 / 2),
            top = ($(window).height() / 2) - (700 / 2),
            popup = window.open("/Documents/ImageViewer?docSource=Expence Tracker&recRefId=" + recId, "Image Viewer", "width=900, height=700, top=" + top + ", left=" + left)
    }
    function fnToggleAdvSearch(action) {

        if (action == '1') {
            $('#pnlAdvSearch').show();
        }
        else {
            $('#pnlAdvSearch').hide();
        }
    }
    $('#txtexpenseDateFrom').datetimepicker({
        format: 'DD/MM/YYYY'
    });
    $('#txtexpenseDateTo').datetimepicker({
        format: 'DD/MM/YYYY'
    });

    function fnClearSearch() {
        debugger;
        $('#txtexpenseDateTo').val('');
        $('#txtexpenseDateFrom').val('');
        $('#ddlStatus').val(0);
        $('#ddlExpenseCategory').val(0);
        $('#ddlMonths').val(0);
        $('#ddlYears').val(0);
    }

    fnDasboardFilter($('#filterCon').val());

</script>
