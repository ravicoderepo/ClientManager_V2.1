@model IEnumerable<DBOperation.User>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table tr td:first-child {
        white-space: nowrap;
    }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item"><a href="#">User </a></li>
                        <li class="breadcrumb-item active">List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-4 col-sm-8">
                                    <h3 class="card-title">List of Users</h3>
                                </div>
                                <div class="col-4 col-sm-2">
                                </div>
                                @*<div class="col-4 col-sm-2">
                                        <button type="button" style="float:right" class="btn btn-block btn-primary btn-sm " onclick="javascript:fnToggleAdvSearch('1')"><i class="fa fa-search"></i> Adv. Search</button>
                                    </div>*@
                                <div class="col-4 col-sm-2">
                                    <button type="button" style="float:right" class="btn btn-block btn-primary btn-sm " onclick="javascript:location.href='/Admin/User/Create'"><i class="fa fa-plus"></i> New</button>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Full Name
                                        </th>
                                        <th>
                                            Is Active ?
                                        </th>
                                        <th>
                                            Reporting Manager
                                        </th>
                                        <th>
                                            Sale Target
                                        </th>
                                        <th>
                                            AddressLine1
                                        </th>
                                        <th>
                                            AddressLine2
                                        </th>
                                        <th>
                                            State
                                        </th>
                                        <th>
                                            City
                                        </th>
                                        <th>
                                            Pincode
                                        </th>
                                        <th>
                                            Created On
                                        </th>
                                        <th>
                                            Created By
                                        </th>
                                        <th>
                                            Modified On
                                        </th>
                                        <th>
                                            Modified By
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>

                                                <button type="button" class="btn btn-primary btn-xs" title="Edit" onclick="javascript:location.href='/Admin/User/Edit/@item.Id'"><i class="far fa-edit"></i></button>
                                                @*<button type="button" class="btn btn-success btn-xs" title="View" onclick="javascript:location.href='/Admin/User/Details/@item.Id'"><i class="fas fa-eye"></i></button>*@
                                                

                                                @if (item.IsActive == true)
                                                {

                                                    <button type="button" class="btn btn-danger btn-xs" title="De-ctivate" onclick="fnDeActivateUser(@item.Id)"><i class="far fa-arrow-alt-circle-up"></i></button>

                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-success btn-xs" title="Activate" onclick="fnActivateUser(@item.Id)"><i class="far fa-arrow-alt-circle-down"></i></button>

                                                }

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FullName)
                                            </td>
                                            <td>
                                                @if (item.IsActive.Value)
                                                {
                                                    <span>Active</span>
                                                }
                                                else
                                                {
                                                    <span>De-Active</span>
                                                }

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User2.FullName)
                                            </td>
                                            <td>
                                                @*@Html.DisplayFor(modelItem => item.SaleTarget)*@
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AddressLine1)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AddressLine2)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.City)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.State)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pincode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedOn)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User3.FullName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ModifiedOn)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User1.FullName)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                @*<tfoot>
                                        <tr>
                                            <th>Rendering engine</th>
                                            <th>Browser</th>
                                            <th>Platform(s)</th>
                                            <th>Engine version</th>
                                            <th>CSS grade</th>
                                        </tr>
                                    </tfoot>*@                              
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            //"buttons": ["excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });



    function fnActivateUser(id) {
        $.ajax({
            type: "GET",
            url: "/Admin/User/Activate/" + id,
            //data: JSON.stringify(Register),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data.status == "Success") {
                    alert(data.message);
                    window.location.href = data.redirectURL;
                }
                //else {
                //    alert(data.message);
                //}

            },
            error: function () {
                alert("Error occured!!  " + data.message)
            }
        });
    }

    function fnDeActivateUser(id) {
        $.ajax({
            type: "GET",
            url: "/Admin/User/DeActivate/" + id,
            //data: JSON.stringify(Register),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data.status == "Success") {
                    alert(data.message);
                    window.location.href = data.redirectURL;
                }
                //else {
                //    alert(data.message);
                //}

            },
            error: function () {
                alert("Error occured!!  " + data.message)
            }
        });
    }
    $("#mnuUsers").addClass("active");
</script>

