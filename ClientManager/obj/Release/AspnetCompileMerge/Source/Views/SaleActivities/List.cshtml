               // @ViewBag.SelectedSalesPerson = $('#ddlSalesPerson option:selected').text();
            },
            error: function (xhr, status) {
                alert(status);
            }
        })
    }

    function fnSalesPersonChange() {
        debugger;
        $("input[name=hdnSalesPerson]").val($('#ddlSalesPerson').val());
    }

    function fnStatusChange() {
        debugger;
        $("input[name=hdnStatus]").val($('#ddlStatus').val());
    }

    function fnToggleAdvSearch(action) {

        if (action == '1') {
            $('#pnlAdvSearch').show();
        }
        else {
            $('#pnlAdvSearch').hide();
        }
    }

    $('#txtCallDateTo').datetimepicker({
        format: 'DD/MM/YYYY'
    });
    $('#txtCallDateFrom').datetimepicker({
        format: 'DD/MM/YYYY'
    });

    function fnClearSearch() {
        debugger;
        $('#txtCallDateTo').val('');
        $('#txtCallDateFrom').val('');
        $('#txtProductName').val('');
        $('#txtCustomerName').val('');
        $('#ddlSalesPerson').val(0);
        $('#ddlStatus').val(0);


    }

